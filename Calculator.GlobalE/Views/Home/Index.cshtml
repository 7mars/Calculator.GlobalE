<div class="jumbotron">
    <h1>Calculator</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <label>Input</label>
        <input type="text" value="" id="inputTxt" />
        <input type="button" id="btn" value="calc" />
    </div>
    <div class="col-md-4">
        <label>Result</label>
        <div id="result"></div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous">

</script>

<script>
    $("#btn").click(function () {
        $.ajax("/api/calculation/",
            {
                type: 'POST',
                dataType: 'json',
                data: { "": $("#inputTxt").val()},
                success: function (response) {
                    $("#result").html(response);
                }
            })
    });
</script>